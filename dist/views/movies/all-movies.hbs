<div class="row">
  {{#each movies}}
    <div class="col-md-3">
      <div class="card my-2">
        <div class="card-body">
          <h4 class = "card-title d-flex justify-content-between align-items-center">
              {{ name }} <a href="/movies/edit/{{_id}}"><i class ="fas fa-edit"></i></a>
          </h4>
          <p>Director: {{director}}</p>
          <p>Rated: {{classification}}</p>
          <form action="/movies/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button class=" btn btn-danger btn-block btn-sm" type="submit">
            Delete
          </button>
          </form>
        </div>
      </div>
    </div>
  {{else}}
    <div class="card mx-auto col-md-3 text-center">
      <div class="card-body">
        <p class="lead">No movies yet</p>
        <a href="/movies/add" class="btn btn-success btn-block">Add a new one</a>
      </div>
    </div>
  {{/each}}
</div>