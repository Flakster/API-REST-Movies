<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Edit movie</h3>
    </div>
    <div class="card-body">
      <form action="/movies/edit-movie/{{movie._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group mx-4 my-2">
          <input type="text" name="name" class="form-control" placeholder="Name"
          value= "{{movie.name}}">
        </div>
        <div class="form-group mx-4 my-2">
          <input type="text" name="director" class="form-control" placeholder="Director"
          value="{{movie.director}}">
        </div>
        <div class="form-group mx-4 my-2">
          <select name="classification" class="form-control" name="classification"  id="classification">
            {{#unless movie.classification}}
              <option hidden selected value="">Classification</option>
            {{/unless}}
            {{#each classifications}}
              <option value="{{code}}" {{isSelected code ../movie.classification}}>
                Rated {{code}} - {{description}}
              </option>
            {{/each}}
          </select> 
        </div>
        <div class="form-group mx-4 my-2">
          <button class="btn btn-success btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>