<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header text-center">
      <h3>Edit classification</h3>
    </div>
    <div class="card-body text-center">
      <form action="/classifications/edit-classification/{{_id}}?_method=PUT"} method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group mx-4 my-2">
          <input type="text" name="code" class="form-control" placeholder="Code" value="{{code}}">
        </div>
        <div class="form-group mx-4 my-2">
          <input type="text" name="description" class="form-control" placeholder="Description" value="{{description}}">
        </div>
        <div class="form-group mx-4 my-2">
          <button class="btn btn-success btn-block">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>