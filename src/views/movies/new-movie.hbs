<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header text-center">
      <h3>New Movie</h3>
    </div>
    <div class="card-body">
      <form action="/movies/new-movie" method= "POST" id=movieform">
      <div class="form-group mx-4 my-2">
        <input type="text" name="name" class="form-control" placeholder="Name" autofocus="true" value="{{name}}">        
      </div>
      <div class="form-group mx-4 my-2">
        <input type="text" name="director" class="form-control" placeholder="Director" value="{{director}}">
      </div>
      <div class="form-group mx-4 my-2">
        <select name="classification" class="form-control" name="classification"  id="classification">
          {{#unless classification}}
            <option hidden selected value="">Classification</option>
          {{/unless}}  
          {{#each classifications}}
            <option value="{{code}}" {{isSelected code ../classification}}>
              Rated {{code}} - {{description}}
            </option>
          {{/each}}
        </select>
      </div>
      <div class="form-group mx-4 my-2">
        <button class="btn btn-success btn-block" type= "submit">
          Save
        </button>
      </div>
    </form>
    </div>
  </div>
</div>