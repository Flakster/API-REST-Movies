<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header text-center">
      <h3>New classification</h3>
    </div>
    <div class="card-body">
      <form action="/classifications/new-classification" method="POST">
        <div class="form-group mx-4 my2">
          <input type="text" name="code" class="form-control" placeholder="code" value="{{code}}">
        </div>
        <div class="form-group mx-4 my-2">
          <input type="text" name="description" class="form-control" placeholder="description" value="{{description}}">
        </div>
        <div class="form-group mx-4 my-2">
          <button class="btn btn-success btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>